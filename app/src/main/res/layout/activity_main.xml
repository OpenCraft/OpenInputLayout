<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.opencraft.library.OpenInputLayout
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:clipChildren="false"
            app:hintAnimationEnabled="false"
            app:hintTextAppearance="@style/HintAppearence"
            app:labelSpacingExtra="4dp"
            app:moveLabelUp="false">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/avertastd_regular"
                android:hint="Faturamento"
                android:text="R$ 4.200,00"
                android:textColorHint="@android:color/black"
                android:textSize="22dp" />
        </br.com.opencraft.library.OpenInputLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.opencraft.library.OpenInputLayout
            android:id="@+id/field2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_below="@id/field1"
            android:clipChildren="false"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/HintAppearence"
            app:moveLabelUp="false">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/avertastd_regular"
                android:hint="Faturamento"
                android:text="R$ 4.200,00"
                android:textColorHint="@android:color/black"
                android:textSize="22dp" />
        </br.com.opencraft.library.OpenInputLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.opencraft.library.OpenInputLayout
            android:id="@+id/field3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_below="@id/field2"
            android:clipChildren="false"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/HintAppearence"
            app:moveLabelUp="false">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/avertastd_regular"
                android:hint="Faturamento"
                android:text="R$ 4.200,00"
                android:textColorHint="@android:color/black"
                android:textSize="22dp" />
        </br.com.opencraft.library.OpenInputLayout>
    </FrameLayout>
</LinearLayout>